{
    "name": "Hindent",
    "scopeName": "source.hin",
    "fileTypes": ["hin"],
    "patterns": [
        {
            "name": "comment.block.hindent",
			"begin": "^\\,$",
			"end": "^\\,$"
		},
        {
            "name": "string.quoted.double.hindent",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.hindent",
                    "match": "\\\\."
                }
            ]
        },
        {
            "name": "comment.line.hindent",
            "match": ";.*$"
        },
        {
            "name": "keyword.control.hindent",
            "match": "^\\s*\\. "
        },
        {
            "name": "constant.numeric.hindent",
            "match": "\\b-?[0-9]+(\\.[0-9]+)?\\b"
        },        
        {
            "name": "variable.hindent",
            "match": "\\b[a-zA-Z0-9_]+\\b"
        }
    ],
    "repository": {
        "code": {
            "patterns": [
            ]
        }
    }
}
