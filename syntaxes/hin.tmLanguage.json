{
    "name": "Hindent",
    "scopeName": "source.hin",
    "fileTypes": ["hin"],
    "patterns": [
        {
            "name": "comment.block.hindent",
			"begin": "^\\.",
			"end": "\\.$"
		},
        {
            "name": "comment.line.hindent",
            "match": "^;.*$"
        },
        {
            "name": "variable.hindent",
            "match": ".+"
        }
    ],
    "repository": {
        "code": {
            "patterns": [
            ]
        }
    }
}
